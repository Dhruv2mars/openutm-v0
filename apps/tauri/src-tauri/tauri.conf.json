{
  "productName": "OpenUTM (Tauri)",
  "version": "0.1.0",
  "identifier": "com.openutm.desktop",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": "bunx vite build"
  },
  "app": {
    "windows": [
      {
        "title": "OpenUTM (Tauri)",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Cross-platform open source hypervisor",
    "longDescription": "OpenUTM is a cross-platform, open source UTM alternative that makes it easy for anybody to have a mini computer inside their computer. It provides an easy-to-use interface for managing QEMU virtual machines.",
    "copyright": "Copyright Â© 2026 OpenUTM Contributors",
    "macOS": {
      "entitlements": "entitlements.plist",
      "signingIdentity": null,
      "providerShortName": null,
      "minimumSystemVersion": "12.0"
    }
  }
}
